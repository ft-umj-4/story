---
layout: default
---

<article class="max-w-5xl mx-auto post-detail">
  <header class="mb-14">
    <h1
      class="text-4xl md:text-5xl text-center font-serif font-bold leading-normal text-slate-900 mt-0 mb-3 dark:text-slate-200"
    >
      {{ title }}
    </h1>
    <div class="text-center text-slate-400">Published on {{ page.date | readableDate }}</div>
    {% if tags %}
    <div class="mt-3 text-center">
      {% for tag in tags %}
      <a
        href="{{ '/tags/' | url }}{{ tag }}"
        class="inline-block bg-slate-200 rounded-full px-3 py-1 text-sm font-medium text-slate-700 m-0.5"
        >#{{ tag }}</a
      >
      {% endfor %}
    </div>
    {% endif %} {% if thumb %}
    <div class="mt-10 -mx-7 md:mx-0">
      <img
        class="w-full max-w-2xl mx-auto md:rounded-2xl post-thumbnail"
        src="{{ thumb | url }}"
        width="960"
        height="500"
        alt="{{ title }}"
      />
    </div>
    {% endif %}
  </header>

  <section id="content" class="prose dark:prose-invert post-content text-slate-800 dark:text-slate-200 max-w-none">
    {{ content | safe }}
  </section>

  <footer class="flex items-center gap-2 flex-wrap py-8 border-t border-slate-200 dark:border-slate-800 mt-8">
    <button
      class="btn-share text-teal-700 hover:text-white border border-teal-700 hover:bg-teal-800 focus:ring-4 focus:outline-none focus:ring-teal-300 font-medium rounded text-sm px-3 py-1.5 text-center dark:border-teal-500 dark:text-teal-500 dark:hover:text-white dark:hover:bg-teal-600 dark:focus:ring-teal-800 flex items-center gap-2"
      data-url="{{ page.url | url }}"
      data-title="{{ title }}"
      type="button"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        class="size-4"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M7.217 10.907a2.25 2.25 0 1 0 0 2.186m0-2.186c.18.324.283.696.283 1.093s-.103.77-.283 1.093m0-2.186 9.566-5.314m-9.566 7.5 9.566 5.314m0 0a2.25 2.25 0 1 0 3.935 2.186 2.25 2.25 0 0 0-3.935-2.186Zm0-12.814a2.25 2.25 0 1 0 3.933-2.185 2.25 2.25 0 0 0-3.933 2.185Z"
        />
      </svg>
      <span>Share</span>
    </button>
    <a
      class="text-teal-700 hover:text-white border border-teal-700 hover:bg-teal-800 focus:ring-4 focus:outline-none focus:ring-teal-300 font-medium rounded text-sm px-3 py-1.5 text-center dark:border-teal-500 dark:text-teal-500 dark:hover:text-white dark:hover:bg-teal-600 dark:focus:ring-teal-800 flex items-center gap-2"
      href="https://github.com/ft-umj-4/story/edit/master/{{
        page.inputPath
      }}"
      target="_blank"
      rel="noopener"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        class="size-4"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10"
        />
      </svg>
      <span>Update</span>
    </a>
  </footer>

