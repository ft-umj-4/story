
extends layout

block append vars
  - bodyclass = 'article-detail'

block prepend title
  | #{ page.title + ' - '}

block header
  include author
  h1= page.title
  p.author
    i.fa.fa-user-o
    | #{ ' Ditulis oleh ' }
    mixin author(page.metadata.author)
  p.date-publish
    i.fa.fa-clock-o
    | #{ ' Dipublikasikan ' }
    = moment.utc(page.date).format('DD MMM YYYY')

block content
  article.article
    section.article__content!= typogr(page.html).typogrify()
    
  div.article__tags   
    span
      i.fa.fa-tags  
    | #{ ' Tags : ' } 
    - var tags = env.helpers.getTagsFromArticle(page)
      each tag in tags
        if env.helpers.getTagHome(tag) !== undefined
          a(href=locals.url+env.helpers.getTagHome(tag).url)= tag

block prepend footer
  div.footer__nav
    a(href=contents.index.url) &laquo; Kembali ke Halaman Utama
