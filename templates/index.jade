
extends layout

block content
  include author
  
  each article in articles
    article.article.intro
      header.article__header
        div.article__title
          a(href=locals.url+article.url)= article.title  

      div.author
        i.fa.fa-user-o
        | #{ ' Ditulis oleh ' }
        mixin author(article.metadata.author)

      div.date-publish.m-bottom-5
        i.fa.fa-clock-o
        | #{ ' Dipublikasikan ' }
        = moment.utc(article.date).format('DD MMM YYYY')

      section.article__content
        if article.intro.length > 0
          != typogr(article.intro).typogrify()
        if article.hasMore
          p.more
            a(href=locals.url+article.url) baca lebih banyak...
          
      div.article__tags   
        span
          i.fa.fa-tags  
        | #{ ' Tags : ' } 
        - var tags = env.helpers.getTagsFromArticle(article)
          each tag in tags
            if env.helpers.getTagHome(tag) !== undefined
              a(href=locals.url+env.helpers.getTagHome(tag).url)= tag

block prepend footer
  div.footer__nav
    if prevPage
      a(href=locals.url+prevPage.url) &laquo; Halaman Sebelumnya
    else
      a(href=locals.url+'/archive.html') &laquo; Lihat semua artikel
    if nextPage
      a(href=locals.url+nextPage.url) Halaman Berikutnya &raquo;
