doctype html
block vars
  - var bodyclass = null;
  
html(lang='id-ID')
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name="viewport", content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no")

      meta(name="language", content="id-ID")

      block title  
      block description      

      link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.description)

      link(href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet")
        
      link(href="https://fonts.googleapis.com/css?family=Josefin+Sans" rel="stylesheet")
        
      link(rel='stylesheet', href=locals.url+contents.css['main.css'].url)

      link(rel="icon", type="image/png", sizes="16x16", href="https://ft-umj-4.github.io/favicon.ico")
        
      base(href=locals.url)

  body.site

    header.header-fixed
      
        nav.nav
          div.nav__left
            .nav__item.nav__logo
              a(href=locals.url)
                img(src=locals.logoUrl)
            .nav__item.nav__brand
              a(href=locals.url)= locals.name

          div.nav__right              
            .nav__item.nav__link
              a(href=locals.url) Home
            .nav__item.nav__link
              a(href=href=locals.url+'/archive.html') Semua Artikel

            - var showTags = ['arisan', 'outing', 'bukber']
            - var allTags = env.helpers.getAllTags()
              each tag in allTags
                if env.helpers.getTagHome(tag) !== undefined  
                  each showTag in showTags
                    if tag === showTag  
                      .nav__item.nav__link
                        a(href=locals.url+env.helpers.getTagHome(tag).url)= tag

    div.cover
      section.content-wrap
        block header

          div.cover__logo
            img(src=locals.logoUrl)
            h1.cover__title
              a(href=locals.url)= locals.name
            p.cover__desc= locals.description

    main#content
      div.content-wrap
        block content

    footer.footer
      div.content-wrap
        block footer

          section.footer__about
            !=contents['about.md'].html

          section.footer__copy
            p Copyright &copy; #{ new Date().getFullYear() } #{ locals.owner } &mdash; powered by&nbsp;
              a(href='https://github.com/jnordberg/wintersmith') Wintersmith
              //- please leave the "powered by" if you use the design

          section.footer__social
            a(href='https://github.com/ft-umj-4', target='_blank')
              i.fa.fa-github
            a(href='https://ft-umj-4.github.io', target='_blank')
              i.fa.fa-globe
            a(href='https://ft-umj-4.github.io/stories/', target='_blank')
              i.fa.fa-rss


  script(src="https://code.jquery.com/jquery-2.2.4.min.js")
  script.
    var ROOT_URL = "#{locals.url}";  
  script(src=locals.url+contents.js['all-script.js'].url)
